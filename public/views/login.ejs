<!-- views/login.ejs -->
<!doctype html>
<html>
<head>
    <title>SensoresApp - LOGIN - Adrenalina MKT&IT - 2017</title>

    <link rel="stylesheet" href="../libs/bootstrap/dist/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="../libs/bootstrap/dist/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="../libs/font-awesome/css/font-awesome.min.css">

    <style>
        body 		{ padding-top:80px; }
    </style>
</head>
<body>
<div class="container">

    <% include header.html %>

    <div class="col-sm-6 col-sm-offset-3">

        <!-- show any messages that come back with authentication -->
        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <!-- LOGIN FORM -->
        <form action="/login" method="post" autocomplete="off">

            <legend class="form-label">Ingrese sus datos</legend>

            <div class="input-group margin-bottom-sm">
                <span class="input-group-addon"><i class="fa fa-user-o fa-fw"></i></span>
                <input class="form-control" name="username" type="text" placeholder="Usuario" autofocus>
            </div>
            <br>
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-key fa-fw"></i></span>
                <input class="form-control" name="password" type="password" placeholder="ContraseÃ±a">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Ingresar</button>
        </form>

        <hr>

        <a class="btn btn-info btn-sm" role="button" href="/signup"><span class="fa fa-user-plus"></span> Registrarse</a>
        <a class="btn btn-default btn-sm" role="button" href="/"><span class="fa fa-home"></span> Volver al inicio</a>

    </div>

</div>

<% include footer.html %>

</body>
</html>